{
  "lexicon": 1,
  "id": "app.collectivesocial.list",
  "defs": {
    "main": {
      "type": "record",
      "description": "A collection (list) of media items with reviews, specific to Collective Social.",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["name", "purpose", "createdAt"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Display name for the collection.",
            "maxGraphemes": 64,
            "maxLength": 640
          },
          "description": {
            "type": "string",
            "description": "Optional description of the collection.",
            "maxGraphemes": 300,
            "maxLength": 3000
          },
          "visibility": {
            "type": "string",
            "description": "Visibility of the collection: public or private. Defaults to public.",
            "knownValues": ["public", "private"],
            "default": "public"
          },
          "isDefault": {
            "type": "boolean",
            "description": "Whether this is the default inbox list. Only one per user, cannot be deleted.",
            "default": false
          },
          "purpose": {
            "type": "string",
            "description": "The purpose of the list, e.g. 'app.collectivesocial.defs#curatelist'.",
            "maxLength": 64
          },
          "avatar": {
            "type": "blob",
            "description": "Optional avatar image for the collection.",
            "accept": ["image/png", "image/jpeg"],
            "maxSize": 1000000
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "Timestamp when this collection was created."
          }
        }
      }
    }
  }
}
