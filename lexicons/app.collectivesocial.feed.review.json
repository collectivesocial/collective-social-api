{
  "lexicon": 1,
  "id": "app.collectivesocial.feed.review",
  "defs": {
    "main": {
      "type": "record",
      "description": "A review of a media item in Collective Social.",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["createdAt"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Optional title for the review.",
            "maxGraphemes": 200,
            "maxLength": 2000
          },
          "text": {
            "type": "string",
            "description": "The review text content.",
            "maxGraphemes": 3000,
            "maxLength": 30000
          },
          "rating": {
            "type": "number",
            "description": "Rating from 0 to 5, supports half-star increments (0.5 steps).",
            "minimum": 0,
            "maximum": 5
          },
          "notes": {
            "type": "string",
            "description": "Private notes about the media item. Only visible to the owner.",
            "maxGraphemes": 3000,
            "maxLength": 30000
          },
          "mediaItemId": {
            "type": "integer",
            "description": "Optional reference to media_items table for aggregated data."
          },
          "mediaType": {
            "type": "string",
            "description": "Type of media: book, movie, tv, podcast, article, game, music, etc.",
            "knownValues": [
              "book",
              "movie",
              "tv",
              "podcast",
              "article",
              "course",
              "video"
            ],
            "maxLength": 64
          },
          "listItem": {
            "type": "string",
            "format": "at-uri",
            "description": "Optional reference (AT-URI) to the associated list item."
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "Timestamp when this review was created."
          },
          "updatedAt": {
            "type": "string",
            "format": "datetime",
            "description": "Timestamp when this review was last updated."
          }
        }
      }
    }
  }
}
